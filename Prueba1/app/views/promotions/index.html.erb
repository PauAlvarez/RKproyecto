<h1>Listing promotions</h1>

<table>
  <thead>
    <tr>
      <th>Fechapromo</th>
      <th>Mediodecomunica</th>
      <th>Descrippromo</th>
      <th>Acuerdo</th>
      <th>User</th>
      <th>Client</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= promotion.fechapromo %></td>
        <td><%= promotion.mediodecomunica %></td>
        <td><%= promotion.descrippromo %></td>
        <td><%= promotion.acuerdo %></td>
        <td><%= promotion.user %></td>
        <td><%= promotion.client %></td>
        <td><%= link_to 'Show', promotion %></td>
        <td><%= link_to 'Edit', edit_promotion_path(promotion) %></td>
        <td><%= link_to 'Destroy', promotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

